{
  "name": "jumptrace",
  "displayName": "jumptrace",
  "description": "File line mapping",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jumptrace.openfile",
        "title": "openfile.jumptrace",
        "icon": "$(file-code)"
      },
      {
        "command": "jumptrace.switchover",
        "title": "switchover.jumptrace",
        "icon": "$(file-code)"
      }
    ],
    "configuration": {
      "title": "jumptrace",
      "properties": {
        "jumptrace.file_path": {
          "type": "string",
          "default": 0,
          "description": "Target file path"
        },
        "jumptrace.highlightBackgroundColor": {
          "type": "string",
          "default": "rgba(131, 247, 95, 0.3)",
          "description": "The background color of the highlighted row",
          "scope": "resource"
        },
        "jumptrace.pathRegex": {
          "type": "string",
          "default": " ",
          "description": "Filter the rows that match the path"
        },
        "jumptrace.skipRegex": {
          "type": "string",
          "default": "^ ",
          "description": "Skipped lines"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "jumptrace.openfile",
          "group": "navigation@1"
        },
        {
          "command": "jumptrace.switchover",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
