{
  "name": "jumptrace",
  "displayName": "Jumptrace: Debug Info Highlighter",
  "description": "A VS Code extension designed for developers, aiming to enhance the debugging experience through visualization. This plugin intelligently parses the correlation between assembly instruction addresses and source code line numbers from debug output (e.g., GDB, LLDB). It provides powerful bidirectional highlighting and navigation functionalities.",
  "version": "0.0.1",
  "publisher": "flyingturtleovo", 
  "icon": "jumptrace.png",
  "engines": {
    "vscode": "^1.100.3"
  },
  "license": "MIT", 
  "keywords": [ 
    "debug",
    "assembly",
    "source code",
    "highlight",
    "jump",
    "trace",
    "gdb",
    "lldb",
    "reverse engineering" 
  ],

  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/flyingturtle543/vscode_jumptrace.git"
  },
  "bugs": {
    "url": "https://github.com/flyingturtle543/vscode_jumptrace/issues"
  },
  "homepage": "https://github.com/flyingturtle543/vscode_jumptrace#readme",

  "activationEvents": [
    "onCommand:jumptrace.switchover" 
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jumptrace.close",
        "title": "Jumptrace: Close Mapping", 
        "icon": "$(close)"
      },
      {
        "command": "jumptrace.switchover",
        "title": "Jumptrace: Toggle Mapping Mode",
        "icon": "$(sync)"
      }
    ],
    "configuration": {
      "title": "jumptrace",
      "properties": {
        "jumptrace.file_path": {
          "type": "string",
          "default": "",
          "description": "Target file path"
        },
        "jumptrace.highlightBackgroundColor": {
          "type": "string",
          "default": "rgba(131, 247, 95, 0.3)",
          "description": "The background color of the highlighted row",
          "scope": "resource"
        },
        "jumptrace.pathRegex": {
          "type": "string",
          "default": " ",
          "description": "Filter the rows that match the path"
        },
        "jumptrace.skipRegex": {
          "type": "string",
          "default": "^ ",
          "description": "Skipped lines"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
